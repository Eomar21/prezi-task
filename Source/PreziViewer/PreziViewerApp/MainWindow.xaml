<Window x:Class="PreziViewerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:reactiveUi="http://reactiveui.net"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="450"
        Width="800"
        MinWidth="450"
        MinHeight="500"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        Background="Transparent">
    <Border Background="#195938" CornerRadius="20">
        <Grid>
            <Grid.InputBindings>
                <MouseBinding Gesture="LeftClick"
            Command="{Binding DragWindowCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
            </Grid.InputBindings>
            <reactiveUi:RoutedViewHost Router="{Binding Router}" >
            </reactiveUi:RoutedViewHost>
            <StatusBar VerticalAlignment="Bottom" Background="#272539">
                <StatusBarItem>
                    <TextBlock Foreground="White" Text="{Binding StatusText}"></TextBlock>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Border>

</Window>